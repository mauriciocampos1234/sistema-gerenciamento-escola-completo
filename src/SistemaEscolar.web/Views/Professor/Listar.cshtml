@model IList<SistemaEscolar.web.Models.Professor.ListarViewModel>
@{
    ViewData["Title"] = "Listar Professor";
}

<h1>Lista de Professores</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Login</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var professor in Model) // Percorre a lista de professores
            {
                <tr>
                    <td>@professor.Id</td>
                    <td>@professor.Nome</td>
                    <td>@professor.Email</td>
                    <td>@professor.Login</td>
                </tr>
            }

           
        </tbody>
    
    </table>
</div>
